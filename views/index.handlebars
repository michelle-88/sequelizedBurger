<div class="container pt-3">
    <h1 id="main-title" class="title text-center pb-3">Welcome to the MVC Diner!</h1>
    <div class="row">

    {{!-- Column for uneaten burgers --}}
    <div class="col">
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-item devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    
    {{!-- Column for eaten burgers --}}
    <div class="col">
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-item devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
    </div>
</div>

<div class="container mt-5">

<h2 id="sub-title" class="text-center pt-3">Order a Burger!</h2>

<div class="row justify-content-center">
    
    <div class="col-4">
    {{!-- Form to add new burger --}}
    <form class="create-form">
        <div class="form-group">
            <label for="add-burger">Type of Burger:</label>
            <textarea class="form-control rounded-5 mb-2" id="add-burger" rows="3"></textarea>
            <button class="btn btn-cyan btn-sm" type="submit"><i class="fas fa-hamburger fa-lg mr-2"></i>Order Burger</button>
        </div>
    </form>
    </div>
</div>

</div>